{
  "info": {
    "name": "LinkedIn Saved Posts Analyzer",
    "description": "API collection aligned with Post dataclass and /users/me routes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Popular Authors",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:{{port}}/popular_authors",
          "protocol": "http",
          "host": ["localhost"],
          "port": "{{port}}",
          "path": ["popular_authors"]
        },
        "description": "Get list of popular authors with their post counts for the current user"
      }
    },
    {
      "name": "Search Posts",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:{{port}}/search?query=python",
          "protocol": "http",
          "host": ["localhost"],
          "port": "{{port}}",
          "path": ["search"],
          "query": [
            {
              "key": "query",
              "value": "python"
            }
          ]
        },
        "description": "Search saved posts by query string"
      }
    },
    {
      "name": "Compute Projection",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:{{port}}/projection",
          "protocol": "http",
          "host": ["localhost"],
          "port": "{{port}}",
          "path": ["projection"]
        },
        "description": "Compute 2D projection of saved posts"
      }
    },
    {
      "name": "Word Cloud",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:{{port}}/wordcloud",
          "protocol": "http",
          "host": ["localhost"],
          "port": "{{port}}",
          "path": ["wordcloud"]
        },
        "description": "Generate word cloud from saved posts"
      }
    },
    {
      "name": "Save Posts",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "[\n  {\n    \"id\": \"post_1\",\n    \"userId\": \"user_123\",\n    \"author\": \"John Doe\",\n    \"profileUrl\": \"https://linkedin.com/in/johndoe\",\n    \"authorImage\": \"https://example.com/author.jpg\",\n    \"authorHeadline\": \"Software Engineer\",\n    \"timestamp\": \"2024-01-03T12:00:00Z\",\n    \"text\": \"This is a sample post about Python programming.\",\n    \"postUrl\": \"https://linkedin.com/posts/post_1\",\n    \"meta\": {\n      \"likes\": 120,\n      \"comments\": 15,\n      \"shares\": 3\n    },\n    \"postImage\": \"https://example.com/post.jpg\"\n  }\n]"
        },
        "url": {
          "raw": "http://localhost:{{port}}/users/me/posts",
          "protocol": "http",
          "host": ["localhost"],
          "port": "{{port}}",
          "path": ["users", "me", "posts"]
        },
        "description": "Save one or more posts for the current user"
      }
    },
    {
      "name": "Get Posts",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:{{port}}/users/me/posts",
          "protocol": "http",
          "host": ["localhost"],
          "port": "{{port}}",
          "path": ["users", "me", "posts"]
        },
        "description": "Retrieve all saved posts for the current user"
      }
    },
    {
      "name": "Get Post By ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:{{port}}/users/me/posts/post_1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "{{port}}",
          "path": ["users", "me", "posts", "post_1"]
        },
        "description": "Retrieve a single post by ID for the current user"
      }
    }
  ]
}
